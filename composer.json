{
    "name": "serenata/serenata",
    "description": "Free and open source server providing code assistance for PHP",
    "keywords": ["static", "analysis", "indexing", "indexer", "ide", "autocompletion", "refactoring", "tooltips", "signature-help"],
    "homepage": "https://serenata.github.io",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": "^7.3||^8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo_sqlite": "*",
        "ext-tokenizer": "*",
        "composer/xdebug-handler": "^1.4",
        "doctrine/cache": "^1.10",
        "doctrine/collections": "^1.6",
        "doctrine/common": "^3.0",
        "doctrine/dbal": "^2.9",
        "doctrine/orm": "^2.6",
        "doctrine/persistence": "^2.0",
        "evenement/evenement": "^3.0",
        "jetbrains/phpstorm-stubs": "dev-master@dev",
        "league/html-to-markdown": "^4.10",
        "nikic/php-parser": "^4.10",
        "php-ds/php-ds": "^1.3",
        "phpstan/phpdoc-parser": "^0.4",
        "psr/container": "^1.0",
        "react/event-loop": "^1.0",
        "react/promise": "^2.7",
        "react/socket": "^1.3",
        "serenata/common": "^0.3.3",
        "serenata/name-qualification-utilities": "^0.5",
        "symfony/config": "^5.1",
        "symfony/console": "^5.1",
        "symfony/dependency-injection": "^5.1",
        "symfony/finder": "^5.1",
        "symfony/yaml": "^5.1"
    },
    "require-dev": {
        "brianium/paratest": "^5.0",
        "pepakriz/phpstan-exception-rules": "^0.10.1",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-doctrine": "^0.12",
        "phpstan/phpstan-php-parser": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpunit/phpunit": "^9.0",
        "slevomat/coding-standard": "^6.3",
        "symfony/process": "^5.1",
        "symfony/var-dumper": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Serenata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Serenata\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "bin": [
        "src/Main.php"
    ],
    "scripts": {
        "phpstan": "phpstan analyse",
        "phpstan-generate-baseline": "@phpstan --no-interaction --no-progress --generate-baseline"
    },
    "funding": [
        {
            "type": "liberapay",
            "url": "https://liberapay.com/Gert-dev"
        },
        {
            "type": "paypal",
            "url": "https://www.paypal.me/gertdev"
        },
        {
            "type": "other",
            "url": "https://serenata.gitlab.io/#support"
        }
    ]
}
